{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "declaration": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src",
    "lib": ["es2016","dom"],
    "types": [
      "node",
      "webpack"
    ],
    "allowJs": true
  },
  "compileOnSave": false,
  "include": [
    "src/app",
  ],
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
